<div id="header">
    <div class="container">
        <div class="row">
            <div class="col s12 m10 offset-m1">
                <h2 class="header">Settings</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col s12 m8 offset-m1 xl7 offset-xl1">
            <div class="row section">
                <div class="input-field col s12">
                    <input disabled value="someone@gmail.com" id="email" type="text" class="validate">
                    <span class="helper-text">Email</span>
                </div>
                <div class="col s12 divider"></div>
                <div class="input-field col s12">
                    <h6>Change Password</h6>
                    <form action="#" class="center-align" style="margin: 0px;">
                        <input Placeholder="Password..." id="password" type="password" class="validate">
                        <input Placeholder="Repeat Password..." id="passwordr" type="password" class="validate">
                        <a class="waves-effect waves-light btn">Change</a>
                    </form>
                </div>
                <div class="col s12 divider"></div>
                <div class="input-field col s12">
                    <h6>Change Avatar</h6>
                    <form action="#">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>File</span>
                                <input type="file">
                            </div>
                            <div class="file-path-wrapper">
                                <input Placeholder="Select your avatar..." class="file-path validate" type="text">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>