{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body_class %}welcome{% endblock %}

{% block body %}
    <div id="main" class="valign-wrapper center-align">
        <div id="card" class="row z-depth-5">
            <form id="form" class="row" action="register.php" method="POST">
                <div class="row" style="margin: 0px;">
                    <div class="input-field col s12">
                        <input id="email" name="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row" style="margin: 0px;">
                    <div class="input-field col s12">
                        <input id="username" name="username" type="text" class="validate">
                        <label for="username">Username</label>
                    </div>
                </div>
                <div class="row" style="margin: 0px;">
                    <div class="input-field col s12">
                        <input id="password" name="password" type="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row" style="margin: 0px;">
                    <div class="input-field col s12">
                        <input id="passwordr" name="passwordr" type="password" class="validate">
                        <label for="passwordr">Repeat Password</label>
                    </div>
                </div>
                <a id="submit" class="waves-effect waves-light btn">Register</a> <br /> <br />
                <a href="{{ asset('/') }}">Back</a>
            </form>
        </div>
    </div>
{% endblock %}