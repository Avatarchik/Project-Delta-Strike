<div id="header">
    <div class="container">
        <div class="row">
            <div class="col s12 m10 offset-m1">
                <h2 class="header">Settings</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col s12 m8 offset-m1 xl7 offset-xl1">
            <div class="row section">
                <div class="input-field col s12">
                    <input disabled value="{{ email }}" id="email" type="text" class="validate">
                    <span class="helper-text">Email</span>
                </div>
                <div class="col s12 divider"></div>
                <div class="input-field col s12">
                    <h6>Change Avatar</h6>
                    <div>
                        {{ form_start(form) }}
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>File</span>
                                {{ form_row(form.avatar) }}
                            </div>
                            <div class="file-path-wrapper">
                                <input Placeholder="Select your avatar..." class="file-path validate" type="text">
                            </div>
                            <button type="submit" class="waves-effect waves-light btn">Upload</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>