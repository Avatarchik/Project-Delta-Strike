{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body_class %}welcome{% endblock %}

{% block body %}
<div id="main" class="valign-wrapper center-align">
    <div id="card" class="row z-depth-5">
        <div id="logo">
            LOGO
        </div>
        <form class="row">
            <div class="row" style="margin: 0px;">
                <div class="input-field col s12">
                    <input id="username" name="username" type="text" class="validate">
                    <label for="username">Username</label>
                </div>
            </div>
            <div class="row" style="margin: 0px;">
                <div class="input-field col s12">
                    <input id="password" name="password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
            <a id="submit" class="waves-effect waves-light btn">Login</a> <br /> <br />
            <a href="{{ asset('/register') }}">Create new account</a>
        </form>
    </div>
</div>
{% endblock %}