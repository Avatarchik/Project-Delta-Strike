<div id="header">
    <div class="container">
        <div class="row">
            <div class="col s12 m10 offset-m1">
                <h2 class="header">Welcome</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col s12 m8 offset-m1 xl7 offset-xl1">
            <div class="row section">
                <div class="col s12">
                    <ul class="collection">
                        {% set count = 1 %}
                        {% for user in top|slice(0,10) %}
                            {% if count > 3 %}
                                <li class="collection-item">{{ count }}. {{ user.getUsername() }} ({{ user.getLevel() }} level)</li>
                            {% else %}
                                <li class="collection-item"><b>{{ count }}. {{ user.getUsername() }} ({{ user.getLevel() }} level)</b><a class="secondary-content">TOP {{ count }}</a></li>
                            {% endif %}
                            {% set count = count + 1 %}
                        {% endfor %}
                        <li class="collection-item" style="color: rgba(187, 187, 187, 0.87);">+{{ top|length-10 }} other users...</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
