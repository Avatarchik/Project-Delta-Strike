<div id="header">
    <div class="container">
        <div class="row">
            <div class="col s12 m10 offset-m1">
                <h2 class="header">Items ({{ count }})</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row section">
        <div class="col s12 m8 offset-m1 xl7 offset-xl1">
            <ul class="collapsible">
                {% for item in items %}
                        <li>
                            <div class="collapsible-header" style="cursor: pointer;"><img src="{{ item.getImage() }}" style="vertical-align: bottom; height: 25px; width: 25px; margin-right: 5px;"> {{ item.getName() }}</div>
                            <div class="collapsible-body no-padding" style="padding-top: 0px !important;">
                                <div style="padding: 10px;">{{ item.getDescription() }}</div>
                                <div style="padding: 10px; border-top: 1px solid #ddd;">
                                    {% for key, value in item.getStats() %}
                                        {{ key }}: {{ value }}<br />
                                    {% endfor %}
                                </div>
                            </div>
                        </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>